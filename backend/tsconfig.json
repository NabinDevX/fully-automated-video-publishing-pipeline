{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.ts",
    "motia.config.ts",
    "**/*.tsx",
    "types.d.ts",
    "**/*.jsx",
    "plugins/cookie-parser-plugin.js"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
